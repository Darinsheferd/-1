// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  name       String
  role       UserRole  @default(MANAGER)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  enquiries  Enquiry[]
}

enum UserRole {
  ADMIN
  MANAGER
  VIEWER
}

model ProductCategory {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id          Int              @id @default(autoincrement())
  name        String
  code        String?          @unique
  description String?
  categoryId  Int
  category    ProductCategory  @relation(fields: [categoryId], references: [id])
  industries  ProductIndustry[]
  documents   Document[]
  createdAt   DateTime         @default(now())

  enquiryItems EnquiryItem[]
}

model Industry {
  id        Int              @id @default(autoincrement())
  name      String
  slug      String           @unique
  products  ProductIndustry[]
}

model ProductIndustry {
  productId  Int
  industryId Int
  product    Product  @relation(fields: [productId], references: [id])
  industry   Industry @relation(fields: [industryId], references: [id])

  @@id([productId, industryId])
}

model Enquiry {
  id           Int           @id @default(autoincrement())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  customerName String
  company      String?
  email        String
  phone        String?
  status       EnquiryStatus @default(NEW)
  comment      String?
  userId       Int?
  manager      User?         @relation(fields: [userId], references: [id])
  items        EnquiryItem[]
}

enum EnquiryStatus {
  NEW
  IN_PROGRESS
  WON
  LOST
}

model EnquiryItem {
  id        Int      @id @default(autoincrement())
  enquiryId Int
  productId Int?
  quantity  Int?
  note      String?
  enquiry   Enquiry @relation(fields: [enquiryId], references: [id])
  product   Product? @relation(fields: [productId], references: [id])
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  body        String
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
}

model Document {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  productId Int?
  product   Product? @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
}

model ReportRecord {
  id        Int      @id @default(autoincrement())
  date      DateTime
  metric    String
  value     Float
  meta      Json?
}
